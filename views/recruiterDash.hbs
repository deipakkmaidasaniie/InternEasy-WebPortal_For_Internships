<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1,maximum-scale=1,user-scalable=no">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="HandheldFriendly" content="true">
    <link rel="stylesheet" href="CSS/applicants-style.css">
    <title>Applicants</title>
</head>

<body>
    <div class="header">
        <a href="../HTML/index.html" class="logo">InternEasy</a>
        <div class="header-right">
            <a class="active" href="#search">Search</a>
            <a href="/recruiterProfile">View Profile</a>
            <a href="/recruiterProfileForm">Edit Profile</a>
            <a href="/recruiterPostJob">Post Internship</a>
            <a href="/recruiterLogout">Logout</a>
            
            

        </div>
    </div>
    <div class="Appli"><p><center>Applicants</center></p></div>

{{#each students}}
    <div class="applicants">
        <div class="card">
            <div class="applicant-title">
                <div class="applicant-name">
                    <p>{{studentName}}</p>
                </div>
                <div class="expertise">
                    <span>{{jobTitle}}</span> 
                </div>
                <div class="place">
                    <p>Pune</p>
                </div>
            </div>
            <div class="intern-desc">
                <div class="profile">
                    <span class="label">Profile</span><br>
                    Web Developer
                </div>
                <div class="exp">
                    <span class="label">Experience</span><br>
                    3 Years
                </div>
                <div class="applied-on">
                    <span class="label">Applied on</span><br>
                    {{timeOfApply}}
                </div>
            </div>

            <div class="hire">
                <input type="submit" style="background-color:forestgreen;" value="Hire">
                <input type="submit" style="background-color:rgb(231, 31, 31);" value="Reject">
                <input type="submit" style="background-color:dodgerblue;" value="Email">
                <td scope="col">
                    <a class="btn btn-secondary" href="/viewProfile?studentId={{studentId}}" target="_blank">View Profile</a>
                    </td>
            </div>
        </div>
    </div>
 {{/each}} 

       
</body>

</html>
